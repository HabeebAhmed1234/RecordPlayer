<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_grey">

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/album_placeholder" />

    <RelativeLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_grey"
        android:padding="8dp">

        <ImageView
            android:id="@+id/x_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_close"
            android:tint="@color/app_loud_secondary_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="asdasd"
                    android:textColor="@color/app_loud_secondary_color"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="asdasd"
                    android:textColor="@color/app_loud_secondary_color"
                    android:textSize="24sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/previous_button"
                    android:layout_width="@dimen/notification_control_size_expanded"
                    android:layout_height="@dimen/notification_control_size_expanded"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_skip_previous"
                    android:tint="@color/app_loud_secondary_color" />

                <ImageView
                    android:id="@+id/play_pause_btn"
                    android:layout_width="@dimen/notification_control_size_expanded"
                    android:layout_height="@dimen/notification_control_size_expanded"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_pause"
                    android:tint="@color/app_loud_secondary_color" />

                <ImageView
                    android:id="@+id/next_button"
                    android:layout_width="@dimen/notification_control_size_expanded"
                    android:layout_height="@dimen/notification_control_size_expanded"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_skip_next"
                    android:tint="@color/app_loud_secondary_color" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>